<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="item_viewholder_header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="item_viewholder_regular_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="art_work_vacancy">
        <item name="android:layout_width">@dimen/recycle_art_work_size</item>
        <item name="android:layout_height">@dimen/recycle_art_work_size</item>
    </style>

    <style name="item_viewholder_text_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">@dimen/recycle_text_margin_start</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="item_viewholder_main_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">9dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="toolbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>


    <style name="edit_text">
        <item name="android:layout_marginHorizontal">@dimen/edit_text_margin_horizontal</item>
        <item name="android:layout_marginVertical">@dimen/edit_text_margin_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textCursorDrawable">@color/blue_main</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:paddingHorizontal">@dimen/edit_text_paddings_vertical</item>
        <item name="android:drawableEnd">@drawable/ic_search</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="information_vacancies_count">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/info_count_margin_top</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">@dimen/info_count_padding_horizontal</item>
        <item name="android:paddingVertical">@dimen/info_count_paddings_vertical</item>
        <item name="android:background">@drawable/background_search_result_count</item>
    </style>

    <style name="progress_bar">
        <item name="android:layout_width">@dimen/progress_bar_size</item>
        <item name="android:layout_height">@dimen/progress_bar_size</item>
        <item name="android:indeterminateTint">@color/blue_main</item>
    </style>

    <style name="recycle_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/recycle_whole_margin_top</item>
    </style>

    <style name="placeholder_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:layout_marginTop">@dimen/placeholder_text_margin_top</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="placeholder_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>